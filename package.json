{
    "name": "augment-functions",
    "displayName": "Augment Functions",
    "publisher": "dandoozan",
    "description": "Toggle \"export\" and \"async\" on functions",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:augmentfunctions.toggleAsync"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "augmentfunctions.toggleAsync",
                "title": "Toggle Async"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test",
        "updateAndInstall": "npm run bumpVersion && npm run createVsix && npm run installVsix",
        "bumpVersion": "npm --no-git-tag-version version patch",
        "createVsix": "vsce package",
        "installVsix": "code --install-extension $npm_package_name-$npm_package_version.vsix"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42",
        "@types/lodash": "^4.14.119"
    },
    "dependencies": {
        "@babel/parser": "^7.2.2",
        "@babel/types": "^7.2.2",
        "lodash": "^4.17.11"
    }
}
